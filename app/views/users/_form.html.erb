<div class="container">
<h1>Sign Up</h1>

<div class="errors-explanation">
    <%=form_errors(@user)%>
</div>

<%=form_for @user do |f| %>
<%=f.label "Name" %>
<%=f.text_field :name %>
<%=f.label "Email" %>
<%=f.email_field :email %>
<%=f.label "Password" %>
<%=f.password_field :password %>
<%=f.label  "Expertise" %>
<%=f.select :expertise, ['Novice', 'Intermediate', 'Expert'] %>
<%= f.submit %>
<%end%>
</div>
<h1>Sign Up</h1>

<% if @user.errors.any? %>
<div id= "error_explanation">
    <% @user.errors.full_messages.each do |message| %>
    <%= message %><br>
<%end%>
<%end%>
</div>

<%=form_for @user do |f| %>
<%=f.label :name, "Name" %>
<%=f.text_field :name %>
<%=f.label :email, "Email" %>
<%=f.email_field :email %>
<%=f.label :password, "Password" %>
<%=f.password_field :password %>
<%=f.label :expertise, "Expertise" %>
<%=f.select :expertise, ['Novice', 'Intermediate', 'Expert'] %>
<%= f.submit %>
<%end%>
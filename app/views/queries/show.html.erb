<div class="container">
<h3><%= @plant.name %></h3> <br>
Q: <%= @query.question %> <br><br>
<% if @query.image.attached?%>
<img src="<%=(url_for(@query.image))%>"><br><br>
<%end%>
<%= link_to "Add diagnosis", new_query_diagnosis_path(@query) %> <br>

<% @query.diagnoses.each do |diagnosis| %>
<div class="diagnosis">
A: <%= diagnosis.comment %> 
Upvote:<%= diagnosis.upvote %> 
<%= button_to "Upvote this answer", upvote_path(@query), method: :put %>
<%= link_to "#{diagnosis.user.name}", user_path(diagnosis.user.id) %> 
Created at: <%= diagnosis.created_at %> <br>
</div>

<%end%>
</div>
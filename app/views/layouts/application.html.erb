<!DOCTYPE html>
<html>
  <head>
    <title>PlantDiagnostics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if !current_user %>
        <li class="nav-item"><%=link_to "Login", login_path %></li>
        <li class="nav-item"><%= link_to "Sign Up", new_user_path %></li>
        <%end%>
        <% if current_user %>
        <li class="nav-item"></li><%= link_to "Profile", user_path(current_user) %></li>
        <li class="nav-item"></li><%= link_to "Logout", logout_path %></li>
       <%end%>

      </ul>
    </nav>
    <%= yield %>
  </body>
</html>

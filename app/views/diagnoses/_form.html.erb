<div class="container">
<div class="errors-explanation">
<%=form_errors(@diagnosis)%>
</div>

<%= form_for @diagnosis do |f| %>
<%= f.hidden_field :query_id %>
<h3>Q: <%= @diagnosis.query.question %></h3><br>
<%= f.label :comment, "Submit a plant diagnosis"%> <br><br>
<%= f.text_area :comment, cols: 100, rows: 10  %><br><br>
<%= f.submit %>
<%end%>
</div>